<div class="row mt-5">

    <div class="col col-4 ml-5">
        <img src="{{user.avatar}}" alt="AVATAR">
    </div>

    <div class="col col-7">
        <form class="p-4 bg-white border shForm" action="/users/edit" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="fullname">Full name:</label>
                <input type="text" class="form-control" name="fullname" id="fullname" value="{{user.fullname}}">
            </div>

            <div class="form-group">
                <label for="email">Email:</label>
                <input type="text" class="form-control" name="email" id="email" value="{{user.email}}">
            </div>

            <label for="avatar">Avatar:</label>
            <div class="input-group mb-3">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="avatar" name="avatar">
                    <label class="custom-file-label" for="avatar">Avatar</label>
                </div>
            </div>

            <div class="form-group">
                <label for="depart">Depart:</label>
                <select class="form-control" name="depart" id="depart">
                    <option value="{{currentUser.depart._id}}" selected>{{currentUser.depart.name}}</option>
                </select>
            </div>


            <button type="submit" class="btn btn-success">Submit</button>
            <a href="/" class="btn btn-danger">Back to index</a>

        </form>
    </div>
</div>