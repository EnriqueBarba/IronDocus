<div class="d-flex justify-content-center text-center">
    <div class="row">
{{#if doc.isNew}}
    <div class="col-12">
        <h1>New document</h1>
    </div>
    <div class="col-12">
    <form action="/documents/new" method="POST">
{{else}}
    <div class="col-12">
        <h1>Edit document</h1>
    </div>
    <div class="col-12">
    <form action="/documents/{{doc._id}}/edit" method="POST">
{{/if}}
        <div class="form-group">
            <input type="text" name="title" id="">
        </div>
        <div class="form-group">
            <!-- <depart> -->
            {{#if currentUser.admin}}
            <select name="depart" id="">
                <option value="" selected>{{currentUser.depart.name}}</option>
            </select>
            {{else}} 
            <select name="depart" id="" disabled>
                <option value="" selected>{{currentUser.depart.name}}</option>
            </select>
            {{/if}} 
        </div>
        <div class="form-group">
            <!-- category -->
            <select name="category" id="listCats">
                <option value="">Select a category</option>
            </select> 
        </div>
        <div class="form-group">
            <textarea name="content" id="" cols="30" rows="10"></textarea>
        </div>

    </form>
    </div>
</div>
<script>
    $(document).ready(function() {
        axios({
            method: "GET",
            url: "http://localhost:3000/findCategories"
            })
        .then( data => {
            console.log(data)
        })
        .catch(err => {console.log(err)} )
    })
</script>
</div>