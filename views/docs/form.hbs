<div class="d-flex justify-content-center text-center">
    <div class="row">
{{#if doc.isNew}}
    <div class="col-12">
        <h1>New document</h1>
    </div>
    <div class="col-12">
    <form action="/documents/new" method="POST">
{{else}}
    <div class="col-12">
        <h1>Edit document</h1>
    </div>
    <div class="col-12">
    <form action="/documents/{{doc._id}}/edit" method="POST">
{{/if}}
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" name="title" id="">
        </div>
        <div class="form-group">
            <!-- <depart> -->
            <label for="depart">Department:</label>
            <select name="depart" id="listDepart" onchange="getCategories(this.options[this.selectedIndex].value)">
            </select>
        </div>
        <div class="form-group">
            <!-- category -->
            <label for="category">Category:</label>
            <select name="category" id="listCat" >
            </select> 
        </div>
        <div class="form-group">
            <textarea name="content" id="content" cols="30" rows="10"></textarea>
        </div>

    </form>
    </div>
</div>
<script type="text/javascript" src="../js/requests.js"></script>
</div>