<div id="loginCont" class="d-flex justify-content-center h-100">

  <div id="form-login-cont"class="col col-8 text-white mt-5 pb-5 mb-5">

    <h2 class="text-center mt-3 mb-3">Welcome to IronDocus</h2>

    <form action="/login" method="POST" class="mb-3" autocomplete="off">

      <div class="form-group">
        <label for="email">Email:</label>
        <input name="email" type="email" class="form-control {{#if error.email }}is-invalid{{/if}}" id="email"
          placeholder="Enter email" value="{{ user.email }}">

        {{#if error.email}}
        <div class="invalid-feedback">
          {{error.email}}
        </div>
        {{/if}}
      </div>

      <div class="form-group">
        <label for="password">Password:</label>
        <input name="password" type="password" class="form-control {{#if error.password }}is-invalid{{/if}}" id="password"
          placeholder="Password" value="{{ user.password }}">

        {{#if error.password}}
        <div class="invalid-feedback">
          {{error.password}}
        </div>
        {{/if}}
      </div>
      
      <div class="d-flex justify-content-around mt-4">
        <button type="submit" class="btn btn-primary">
          Log in
        </button>
        <a class="btn btn-info" href="/users/new">Sign up</a>
      </div>

    </form>
    
  </div>

</div>

