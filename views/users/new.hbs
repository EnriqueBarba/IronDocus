<div id="signupCont" class="d-flex justify-content-center h-200">

    <div id="form-signup-cont" class="col col-8 text-white mt-5 pb-5 mb-5">

        <h2 class="text-center mt-3 mb-3">Welcome to IronDocus</h2>

        <form action="/users/new" method="POST" class="mb-3" autocomplete="off">

            <div class="form-group">
                <label for="fullname">Fullname:</label>
                <input name="fullname" type="fullname" class="form-control {{#if error.fullname }}is-invalid{{/if}}"
                    id="fullname" placeholder="Enter name" value="{{ user.fullname }}">

                {{#if error.fullname}}
                <div class="invalid-feedback">
                    {{error.fullname}}
                </div>
                {{/if}}
            </div>


            <div class="form-group">
                <label for="email">Email:</label>
                <input name="email" type="email" class="form-control {{#if error.email }}is-invalid{{/if}}" id="email"
                    placeholder="Enter email" value="{{ user.email }}">

                {{#if error.email}}
                <div class="invalid-feedback">
                    {{error.email}}
                </div>
                {{/if}}
            </div>

            <div class="form-group">
                <label for="password">Password:</label>
                <input name="password" type="password" class="form-control {{#if error.password }}is-invalid{{/if}}"
                    id="password" placeholder="password">

                {{#if error.password}}
                <div class="invalid-feedback">
                    {{error.password}}
                </div>
                {{/if}}
            </div>


            <label for="password">Avatar:</label>
            <div class="input-group mb-3">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="inputGroupFile01"
                        aria-describedby="inputGroupFileAddon01">
                    <label class="custom-file-label" for="inputGroupFile01">Avatar</label>
                </div>
            </div>


            <label class="my-1 mr-2" for="depart">Depart:</label>
            <select name="depart" id="depart" class="custom-select">
				{{#each departs as |depart|}}
				<option value="{{depart.id}}" {{#equals depart.id ../users.depart}}selected{{/equals}}>
					{{depart.name}}</option>
				{{/each}}
			</select>

            <button type="submit" class="btn btn-success mt-2">
                Sign Up
            </button>

            <a class="btn btn-info mt-2" href="/login">Back to Login</a>

        </form>
    </div>

</div>