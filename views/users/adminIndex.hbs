<h1 class="text-center mt-2">Welcome  <i>{{currentUser.fullname}}</i></h1>

<div class="col col-12 mb-2 mt-2">
    <a href="/documents/new" class="btn btn-success"><i class="fa fa-plus"></i> New Document</a>
</div>

{{#if users}}
    <div class="col col-8">
        <h3>Pending requests:</h3>
    </div>
    <div class="d-flex flex-row justify-content-around">
    {{#each users as |user|}}
        {{>userCard user}}
    {{/each}}
    </div>
{{else}}
    <h3>There is not pending users to be validated</h3>
{{/if}}